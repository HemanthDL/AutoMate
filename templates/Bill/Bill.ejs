        const urlParams = new URLSearchParams(window.location.search);
        const customerId = urlParams.get('customerId');
        const registernumber = urlParams.get('registernumber');
        const customernumber = urlParams.get('customernumber');
        const vehicletype = urlParams.get('vehicletype');
        const bookeddate = urlParams.get('bookeddate');
        const mechanicnumber = urlParams.get('mechanicnumber');

        document.getElementById('customerName').value = customerId;
